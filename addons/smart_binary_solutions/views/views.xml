<odoo>

    <record id="product_in_view_form" model="ir.ui.view">
        <field name="name">product_id.products.sbs.db</field>
        <field name="model">products.sbs.db</field>
        <field name="arch" type="xml">
             <form string="Entrada de Producto">
                <sheet>
                    <group>
                        <record id="client_view_form" model="ir.ui.view">
                            <field name="name">client.products.sbs.db</field>
                            <field name="model">client.sbs.db</field>
                            <field name="arch" type="xml">
                                <form>
                                    <sheet>
                                        <group >
                                            <group>
                                                <group>
                                                    <field name="name"/>                       
                                                </group>
                                                <group >
                                                    <field name="ruc_dni"/>  
                                                </group>
                                                <group>
                                                    <field name="contact"/>   
                                                </group>
                                                <group>
                                                    <field name="address"/>
                                                </group>
                                                <group>
                                                    <field name="number_phone"/>
                                                </group>
                                                <group>
                                                    <field name="email"/>
                                                </group>
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </record>
                    </group>

                    <group>
                        <group>
                            <group>
                                <field name="name"/>                       
                            </group>
                            <group >
                                <field name="brand"/>  
                            </group>
                            <group>
                                <field name="serie"/>   
                            </group>
                            <group>
                                <field name="date"/>
                            </group>
                        </group>
                        <group>
                            <field name="producto_flaw"/>
                            <field name="observation"/>
                        </group>
                    </group>
                        
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="user_id" widget="mail_thread"/>
                </div> -->
            </form>
        </field>
    </record>



    <record id="action_view_productIn" model="ir.actions.act_window">
        <field name="name">Entrada de Producto</field>
        <field name="res_model">products.sbs.db</field>
    </record>

